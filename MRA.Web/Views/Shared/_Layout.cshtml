<!DOCTYPE html>
<html lang="es" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MiguelRomeral</title> 
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" />
    <!-- Bootstrap Font Icon CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />

    @* <link href='https://fonts.googleapis.com/css?family=Kanit' rel='stylesheet'> *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/light-theme.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/settings.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/normalize.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/variables.css rel="stylesheet" asp-append-version="true" />
    <link href="~/css/animations.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="~/MRA.Web.styles.css" asp-append-version="true" />
    

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="transition" data-theme="dark">
    <script src="~/js/local-storage.js" asp-append-version="true"></script>
    <script asp-append-version="true">
        loadConfig();
    </script>
    <span id="bannerDevelopmentMode" class="mr-development-banner" title="Página Web en Desarrollo">
        EN DESARROLLO 🛠
    </span>
    <div class="mr-body">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    <div class="mr-bottom-bar">
        @{
            string controladorActual = ViewContext.RouteData.Values["controller"].ToString();
            string accionActual = ViewContext.RouteData.Values["action"].ToString();
        }

        <a class="mr-bottom-bar-button" asp-area="" asp-controller="Home" asp-action="Index">
            <div class="mr-bottom-bar-icon">
                @if (controladorActual == "Home" && accionActual == "Index")
                {
                    <i class="bi bi-house-door-fill"></i>
                }
                else
                {
                    <i class="bi bi-house-door"></i>
                }
            </div>
            <div class="mr-bottom-bar-text">
                Inicio
            </div>
        </a>
        <a class="mr-bottom-bar-button" asp-area="" asp-controller="Art" asp-action="Index">
            <div class="mr-bottom-bar-icon">
                @if (controladorActual == "Art" && accionActual == "Index")
                {
                    <i class="bi bi-easel-fill"></i>
                }
                else
                {
                    <i class="bi bi-easel"></i>
                }
            </div>
            <div class="mr-bottom-bar-text">
                Galería
            </div>
        </a>
        <a class="mr-bottom-bar-button mr-spotify" asp-area="" asp-controller="Spotify" asp-action="Playlist">
            <div class="mr-bottom-bar-icon">
                @if (controladorActual == "Spotify" && accionActual == "Playlist")
                {
                    <i class="bi bi-cassette-fill"></i>
                }
                else
                {
                    <i class="bi bi-cassette"></i>
                }
            </div>
            <div class="mr-bottom-bar-text">
                Playlist
            </div>
        </a>
        <a class="mr-bottom-bar-button" asp-area="" asp-controller="About" asp-action="Index">
            <div class="mr-bottom-profile-pic">
                <img src="~/assets/images/miguel.jpeg" class="mr-chat-image-miguel brand"
                     style="@(controladorActual == "About" ? "border-color: var(--mr-chat-color);" : "border: none;") " />
            </div>
            
            <div class="mr-bottom-bar-text" id="bottomBarTextAbout">
                Sobre Mí
            </div>
        </a>
        <a class="mr-bottom-bar-button" asp-area="" asp-controller="Home" asp-action="Settings">
            <div class="mr-bottom-bar-icon">
                @if (controladorActual == "Home" && accionActual == "Settings")
                {
                    <i class="bi bi-gear-fill"></i>
                }
                else
                {
                    <i class="bi bi-gear"></i>
                }
            </div>
            <div class="mr-bottom-bar-text">
                Ajustes
            </div>
        </a>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.js" integrity="sha256-v2nySZafnswY87um3ymbg7p9f766IQspC5oqaqZVX2c=" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/4f3ce16e3e.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>
