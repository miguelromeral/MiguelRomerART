@{
    ViewData["Title"] = "Playlist de Spotify";
}


@section Styles {
    <style asp-append-version="true">
        #divSpotifyPlaylist{
            width: 100%;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }
    </style>
}
<div class="container">

<div>
    <h1>🎶 Playlist de Spotify</h1>
    <div>
        <p>
            Recopilación de todas las canciones de Spotify usadas en los dibujos de la galería.
        </p>
    </div>
        <div id="divSpotifyPlaylist">
            <iframe style="border-radius:12px" src="https://open.spotify.com/embed/playlist/4V1vW0rTwgnMIiRXIEz77i?utm_source=generator" 
                width="100%" 
                height="100%" 
                frameBorder="0" 
                allowfullscreen="" 
                allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" 
                loading="lazy"></iframe>
        </div>
</div>
</div>